{
  "name": "ai-productivity-desktop",
  "version": "1.0.0",
  "description": "Production-ready Windows desktop Electron application for AI-driven productivity platform",
  "main": "dist/main.js",
  "preload": "dist/preload.js",
  "homepage": "./",
  "private": true,
  "author": "FusionDesk Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3010 && electron .\"",
    "react-dev": "craco start",
    "react-build": "vite build",
    "electron-build": "tsc -p tsconfig.electron.json",
    "build": "npm run react-build && npm run electron-build",
    "dist": "npm run build && electron-builder --win --publish never",
    "dist:github": "npm run build && electron-builder --win --publish github",
    "dist:nsis": "npm run build && electron-builder --win nsis --publish never",
    "dist:msi": "npm run build && electron-builder --win msi --publish never",
    "dist:portable": "npm run build && electron-builder --win portable --publish never",
    "dist:all": "npm run build && electron-builder --win --publish never",
    "dist:preview": "npm run build && electron-builder --win --publish never --draft",
    "build:report": "npm run react-build && npm run analyze",
    "analyze": "vite-bundle-visualizer",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "precommit": "lint-staged",
    "prod-check": "npm run lint && npm run test && npm run build",
    "prod-build": "npm run prod-check && npm run dist"
  },
  "dependencies": {
    "@fluentui/react": "^8.107.0",
    "@fluentui/react-components": "^9.72.7",
    "@fluentui/react-icons": "^2.0.315",
    "@react-pdf/renderer": "^4.3.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "core-js-pure": "^3.47.0",
    "date-fns": "^2.30.0",
    "dexie": "^3.2.4",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "js-cookie": "^3.0.5",
    "jspdf": "^3.0.4",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.15.0",
    "recharts": "^3.5.1",
    "sockjs-client": "^1.6.1",
    "stompjs": "^2.3.3",
    "uuid": "^9.0.0",
    "ws": "^8.15.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@electron/rebuild": "^3.3.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.8",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^39.2.4",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^5.1.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^5.10.0",
    "source-map-explorer": "^2.5.3",
    "terser": "^5.26.0",
    "ts-jest": "^29.1.1",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^4.9.5",
    "vite": "^5.0.0",
    "vite-bundle-visualizer": "^1.1.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.17.4",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "build": {
    "appId": "com.aiproductivity.desktop",
    "productName": "FusionDesk",
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FusionDesk"
    },
    "msi": {
      "oneClick": false
    },
    "publish": {
      "provider": "generic",
      "url": "https://updates.aiproductivity.com"
    }
  }
}
