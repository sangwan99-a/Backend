# Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in your values

# API Endpoints
REACT_APP_API_URL=http://localhost:3001/api/v1
REACT_APP_WS_URL=ws://localhost:3001/ws

# Service URLs (optional, can route through API gateway)
REACT_APP_ANALYTICS_SERVICE_URL=http://localhost:3002/api/v1
REACT_APP_CHAT_SERVICE_URL=http://localhost:3003/api/v1
REACT_APP_EMAIL_SERVICE_URL=http://localhost:3004/api/v1
REACT_APP_CALENDAR_SERVICE_URL=http://localhost:3005/api/v1
REACT_APP_TASKS_SERVICE_URL=http://localhost:3006/api/v1
REACT_APP_FILES_SERVICE_URL=http://localhost:3007/api/v1
REACT_APP_SEARCH_SERVICE_URL=http://localhost:3008/api/v1
REACT_APP_ADMIN_SERVICE_URL=http://localhost:3009/api/v1

# Authentication
REACT_APP_AUTH_DOMAIN=your-auth-domain.com
REACT_APP_AUTH_CLIENT_ID=your-client-id
REACT_APP_TOKEN_REFRESH_URL=http://localhost:3001/api/v1/auth/refresh

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=104857600    # 100MB in bytes
REACT_APP_MAX_FILE_SIZE_MB=100
REACT_APP_UPLOAD_CHUNK_SIZE=5242880  # 5MB in bytes

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_AI_INSIGHTS=true
REACT_APP_ENABLE_SEMANTIC_SEARCH=true
REACT_APP_ENABLE_FILE_COLLABORATION=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# Monitoring & Logging
REACT_APP_SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id
REACT_APP_LOG_LEVEL=debug              # debug, info, warn, error
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_BOUNDARY=true

# Google Analytics
REACT_APP_GA_ID=UA-XXXXXXXXX-X

# Stripe Billing (for production)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_key_here

# Development/Build Configuration
NODE_ENV=development                   # development, production
GENERATE_SOURCEMAP=true
ESLINT_NO_DEV_ERRORS=true
BROWSER=chrome                        # chrome, firefox, none
PORT=3000
