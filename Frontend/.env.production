# Production Environment Configuration
# Use this file for production deployments

# API Endpoints (CDN/Load Balancer)
REACT_APP_API_URL=https://api.fusiondesk.app/api/v1
REACT_APP_WS_URL=wss://api.fusiondesk.app/ws

# Service URLs (optional, uses API gateway by default)
REACT_APP_ANALYTICS_SERVICE_URL=https://api.fusiondesk.app/api/v1/analytics
REACT_APP_CHAT_SERVICE_URL=https://api.fusiondesk.app/api/v1/chat
REACT_APP_EMAIL_SERVICE_URL=https://api.fusiondesk.app/api/v1/email
REACT_APP_CALENDAR_SERVICE_URL=https://api.fusiondesk.app/api/v1/calendar
REACT_APP_TASKS_SERVICE_URL=https://api.fusiondesk.app/api/v1/tasks
REACT_APP_FILES_SERVICE_URL=https://api.fusiondesk.app/api/v1/files
REACT_APP_SEARCH_SERVICE_URL=https://api.fusiondesk.app/api/v1/search
REACT_APP_ADMIN_SERVICE_URL=https://api.fusiondesk.app/api/v1/admin

# Authentication
REACT_APP_AUTH_DOMAIN=auth.fusiondesk.app
REACT_APP_AUTH_CLIENT_ID=prod-client-id
REACT_APP_TOKEN_REFRESH_URL=https://api.fusiondesk.app/api/v1/auth/refresh

# File Upload
REACT_APP_MAX_FILE_SIZE=104857600
REACT_APP_MAX_FILE_SIZE_MB=100
REACT_APP_UPLOAD_CHUNK_SIZE=5242880

# Feature Flags (all enabled in production)
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_AI_INSIGHTS=true
REACT_APP_ENABLE_SEMANTIC_SEARCH=true
REACT_APP_ENABLE_FILE_COLLABORATION=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# Monitoring & Logging
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_BOUNDARY=true

# Google Analytics
REACT_APP_GA_ID=UA-XXXXXXXXX-X

# Stripe Billing
REACT_APP_STRIPE_PUBLIC_KEY=pk_live_your_key_here

# Production Settings
NODE_ENV=production
GENERATE_SOURCEMAP=false
ESLINT_NO_DEV_ERRORS=false
CI=true
